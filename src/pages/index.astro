---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const books = await getCollection("books");

export const prerender = true;
---

<Layout title="Dev Books üìï, libros para programadores">
  <main>
    <h1 class="text-center text-5xl md:text-6xl font-extrabold mb-12 md:mb-24">
      Dev üë®‚Äçüíª
      <span class="block md:inline">Books</span>
    </h1>

    <section aria-label="Libros recomendados para programadores">
      <div class="px-4 mx-auto max-w-screen-xl">
        <div class="grid gap-8 lg:grid-cols-2">
          {
            books.map((book) => {
              const { slug, data } = book;
              const { title, author, img, readtime, description, buy } = data;

              return (
                <article class="w-full grid gap-4 mx-auto md:grid md:grid-cols-[12rem_1fr]">
                  <a
                    class="mb-2 xl:mb-0 transition hover:scale-110"
                    href={`/libro/${slug}`}
                  >
                    <img
                      transition:name={`img-${slug}`}
                      class="w-48 md:w-auto rounded mx-auto md:mx-0"
                      src={`/${img}`}
                      alt={title}
                    />
                  </a>

                  <div class="flex flex-col justify-center">
                    <h2
                      transition:name={`title-${slug}`}
                      class="text-balance mb-4 text-xl md:text-2xl text-center md:text-left font-bold leading-tight text-white"
                    >
                      {title}
                    </h2>

                    <p class="mb-2 text-gray-300 max-w-sm text-justify sm:text-left">
                      {description}
                    </p>
                    <span class="text-xs">
                      ‚åõ Lectura en {readtime} minutos
                    </span>
                  </div>
                </article>
              );
            })
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
